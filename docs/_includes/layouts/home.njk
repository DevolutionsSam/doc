---
layout: 'layouts/base.njk'
---
<div class="dwd-header-media">
  <div class="dwd-header-media-content">
    <div class="web-site-width">
      <div id="algolia-autocomplete" data-index="docs-{{ lang }}" data-placeholder="{{ locale[lang].placeholderSearch }}"></div>
    </div>
  </div>
  <div class="dwd-photo-parallax bg-support"></div>
</div>

<div class="dwd-section">
  <div class="web-site-width">
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>

    <nav class="grid-list">
      {% for doc in docs %}
        <{{ "div" if doc.links else "a href=" + locale[lang].projects[doc.name].url }}>
          <img src="{{ locale[lang].projects[doc.name].icon }}">
          <span>{{ locale[lang].projects[doc.name].formattedName | safe }}</span>

          {% if doc.links %}
            <nav>
              {% for link in doc.links %}
                <a href="{{ link.url }}">
                  {{ link.name }}
                  {{ icons.arrowRight | safe }}
                </a>
              {% endfor %}
            </nav>
          {% endif %}
        </{{ "div" if doc.links else "a" }}>
      {% endfor %}
    </nav>
  </div>
</div>